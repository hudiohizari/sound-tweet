<resources>
    <!-- Base application theme. -->
    <style name="Theme.SoundTweet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/cornflower_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tropical_blue</item>
        <item name="colorSecondaryVariant">@color/tropical_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text Input Style style. -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <!-- Bottom sheet dialog theme. -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextInputLayout. -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Button. -->
    <style name="ButtonFill" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/selector_button_text</item>
        <item name="android:backgroundTint">@color/selector_button</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonFillThin" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/selector_button_text</item>
        <item name="android:backgroundTint">@color/selector_button</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonOutlineThin" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/selector_button_outline_text</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/selector_button_outline</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/cornflower_blue</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Text Style. -->
    <style name="TextPrimaryExtraLargeSemiBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextPrimaryLargerBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>


<resources>
    <!-- Base application theme. -->
    <style name="Theme.SoundTweet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/cornflower_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tropical_blue</item>
        <item name="colorSecondaryVariant">@color/tropical_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLargeBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

</resources>
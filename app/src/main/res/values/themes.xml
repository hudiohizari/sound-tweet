<resources>
    <!-- Base application theme. -->
    <style name="Theme.SoundTweet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/cornflower_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tropical_blue</item>
        <item name="colorSecondaryVariant">@color/tropical_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextPrimaryLargeBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextPrimaryBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextPrimaryRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="TextSecondaryLargeBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/pale_sky</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextSecondaryBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pale_sky</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextSecondaryRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pale_sky</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

</resources>
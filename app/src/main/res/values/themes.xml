        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextSecondaryExtraLargeSemiBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/pale_sky</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextSecondaryLargeSemiBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pale_sky</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextSecondarySemiBold">
        <item name="android:textSize">14sp</item>

<resources>
    <!-- Base application theme. -->
    <style name="Theme.SoundTweet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryVariant">@color/cornflower_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tropical_blue</item>
        <item name="colorSecondaryVariant">@color/tropical_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text Input Style style. -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <!-- Button style. -->
        <item name="materialButtonStyle">@style/ButtonTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextInputLayout. -->
    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Button. -->
    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/selector_button_text</item>
        <item name="android:backgroundTint">@color/selector_button</item>
        <item name="rippleColor">@color/white</item>
    </style>
    <style name="ButtonThinTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/selector_button_text</item>
        <item name="android:backgroundTint">@color/selector_button</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Text Style. -->
    <style name="TextPrimaryExtraLargeSemiBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimaryLargerBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="TextPrimaryLargeBold">
